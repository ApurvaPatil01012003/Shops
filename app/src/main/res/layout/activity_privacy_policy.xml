<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ðŸ”’ Privacy Policy"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Effective Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Effective Date: August 25, 2025"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginBottom="16dp"/>

        <!-- Introduction -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Introduction"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to My Biz App. We value your privacy and are committed to safeguarding your personal information. This Policy explains what we collect, why we collect it, and how you can manage your information."
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Information We Collect -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Information We Collect"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.1 Information You Provide\n- Account details: name, email, phone number, password (if you register).\n- Business info: company name, role, industry (optional).\n- Support and feedback: messages and content you submit when contacting us.\n\n2.2 Automatically Collected\n- Device and diagnostics: Android version, device model, app version, language, crash logs, performance metrics.\n- Usage analytics: feature usage, session events (e.g., via Firebase Analytics or equivalent).\n\n2.3 Location Data (Optional)\n- If you grant permission, the App may collect approximate or precise location to enable specific features. You can change this anytime in Android settings.\n\n2.4 Third-Party Data\n- If future versions support third-party sign-in or integrations, we may receive limited profile data as permitted by you and that platform."
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- How We Use Information -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. How We Use Your Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Operate, maintain, and improve App functionality and user experience.\n- Provide customer support; respond to queries and feedback.\n- Send updates and notifications (including marketing only if you opt in).\n- Monitor usage trends, fix bugs, and enhance security.\n- Comply with legal and regulatory obligations."
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sharing Information -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Sharing Your Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- We do not sell or rent personal data.\n- May share information with service providers (analytics, crash reporting, support) under confidentiality.\n- Authorities if required by law.\n- Business transfers (merger, acquisition) under comparable privacy safeguards."
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Data Security -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Data Security"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We use industry-standard measures (e.g., encrypted transit over HTTPS, controlled access, secure storage). No system is completely secure; please report any concerns using the contact details below."
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Data Retention -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6. Data Retention"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We retain personal data while your account is active or as needed for the purposes described here. Upon account deletion, we delete or anonymize personal data within 30 days unless a longer period is required by law. Aggregated/anonymous analytics may be retained longer."
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- User Rights -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7. Your Rights and Choices"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Access a copy of your personal data.\n- Request correction, deletion, or restriction of processing.\n- Withdraw consent where processing is based on consent.\n- Request data portability, where applicable.\nTo exercise rights, contact us via the details below. Identity may be verified before action."
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Contact -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8. Contact"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coach AMOL (Amol Salunkhe)\nMy Biz App\nEmail: sales@coachmol.com\nAddress: Shop No 4, 4th Floor, Sector No. 4, Pune â€“ Nashik Hwy, Moshi, Bhosari, Pune, Maharashtra 412105"
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Childrenâ€™s Privacy -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9. Childrenâ€™s Privacy"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The App is not intended for children under 13. We do not knowingly collect personal information from children."
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- International Data Transfers -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10. International Data Transfers"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="If data is transferred to other countries, we implement appropriate safeguards and comply with applicable data-protection laws."
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btnAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="#007BFF"
            android:padding="10dp"
            android:text="Continue" />
    </LinearLayout>
</ScrollView>
