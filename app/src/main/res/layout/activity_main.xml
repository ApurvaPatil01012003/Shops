<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">


<ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/register" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="24dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Shop name"
            android:textColor="#000000"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext_rounded"
            android:fontFamily="sans-serif"
            android:hint="Enter your shop name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile number"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/edtMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext_rounded"
            android:fontFamily="sans-serif"
            android:hint="Enter your mobile number"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activation code"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/edtActcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext_rounded"
            android:fontFamily="sans-serif"
            android:hint="Enter your activation code"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="60dp"
            />
        <CheckBox
            android:id="@+id/checkBoxTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agrree to the Terms Of service and Privacy Policy"
/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Continue"
            android:padding="20dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            style="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="12dp"
            android:backgroundTint="#002B73"
            android:textColor="@android:color/white"/>
    </LinearLayout>


</LinearLayout>
