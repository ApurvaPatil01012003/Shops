<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bsetgoals" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/ResetShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Shop Name"
            android:textColor="#003366"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtResetFirstTurnOver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="FY 2022-2023 Revenue"
            android:textColor="#000000"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/ResetFirstTurnOver"
            style="@style/CustomTextInputLayoutOutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edittext_rounded"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtResetSecondTurnOver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="FY 2023-2024 Revenue"
            android:textColor="#000000"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/ResetSecondTurnOver"
            style="@style/CustomTextInputLayoutOutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edittext_rounded"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtResetGrowth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Growth: 0%"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ResetEGFY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expected Growth "
            android:textColor="#000000"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/edtResetGrowth"
            style="@style/CustomTextInputLayoutOutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edittext_rounded"
            android:inputType="numberDecimal"
            android:padding="14dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtResetGrowthShow"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:text="Result"
            android:visibility="gone"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#002B73"
            android:textSize="50sp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="20dp"
            android:text="Continue"
            android:padding="20dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            style="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="12dp"
            android:backgroundTint="#002B73"
            android:textColor="@android:color/white"/>


            </LinearLayout>
    </LinearLayout>
</ScrollView>



















