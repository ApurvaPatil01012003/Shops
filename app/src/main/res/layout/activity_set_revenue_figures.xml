<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:contentDescription="App Logo"
            android:src="@drawable/mybiztracker" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:text="बिजनेस बढाने का रोडमॅप \n Past, Present, Future "
            android:textColor="#003366"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!-- Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Shop Name -->
                <TextView
                    android:id="@+id/ResetShopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Shop Name"
                    android:textColor="#003366"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Label: FY 2022-2023 Revenue -->
                <TextView
                    android:id="@+id/txtResetFirstTurnOver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FY 2022-2023 Revenue"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ResetFirstTurnOver"
                    style="@style/CustomTextInputLayoutOutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_background"
                    android:inputType="numberDecimal"
                    android:padding="12dp" />


                <TextView
                    android:id="@+id/txtResetSecondTurnOver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="FY 2023-2024 Revenue"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/ResetSecondTurnOver"
                    style="@style/CustomTextInputLayoutOutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_background"
                    android:inputType="numberDecimal"
                    android:padding="12dp" />

                <!-- Growth Output -->
                <TextView
                    android:id="@+id/txtResetGrowth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Growth: 0%"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Label: Expected Growth -->
                <TextView
                    android:id="@+id/ResetEGFY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Expected Growth "
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edtResetGrowth"
                    style="@style/CustomTextInputLayoutOutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_background"
                    android:inputType="numberDecimal"
                    android:padding="14dp" />
                <TextView
                    android:id="@+id/txtResetGrowthShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Result"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#007BFF"
                    android:fontFamily="sans-serif-medium"
                    android:padding="12dp"
                    android:text="Reset"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>