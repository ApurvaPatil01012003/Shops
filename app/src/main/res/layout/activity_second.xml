<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
    android:padding="10dp"
        android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bsetgoals"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Shop Name -->
            <TextView
                android:id="@+id/ShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Shop Name"
                android:textColor="#003366"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Label: FY 2022-2023 Revenue -->
            <TextView
                android:id="@+id/txtFirstTurnOver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="FY 2022-2023 Revenue"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/FirstTurnOver"
                style="@style/CustomTextInputLayoutOutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_edittext_rounded"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#000000" />

            <!-- Label: FY 2023-2024 Revenue -->
            <TextView
                android:id="@+id/txtSecondTurnOver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="FY 2023-2024 Revenue"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Growth Output -->
            <EditText
                android:id="@+id/SecondTurnOver"
                style="@style/CustomTextInputLayoutOutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_edittext_rounded"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtGrowth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Growth: 0%"
                android:textColor="#000000"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/EGFY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected Growth "
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtGrowth"
                style="@style/CustomTextInputLayoutOutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_edittext_rounded"
                android:inputType="numberDecimal"
                android:padding="14dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtGrowthShow"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:text="Result"
                android:visibility="gone"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#002B73"
                android:textSize="50sp" />
            <TextView
                android:id="@+id/txtexGrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:text="Expected Growth"
                android:visibility="gone"
                android:textAlignment="center"
                android:textColor="#AFADAD"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="20dp"
                android:text="Active"
                android:padding="20dp"
                android:textAllCaps="false"
                android:enabled="false"
                android:textSize="16sp"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="12dp"
                android:backgroundTint="#002B73"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>