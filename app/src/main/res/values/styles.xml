<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextInputLayoutOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#333333</item> <!-- Dark border color -->
        <item name="boxStrokeWidth">2dp</item> <!-- Border thickness -->
        <item name="boxStrokeWidthFocused">3dp</item> <!-- On focus -->
        <item name="hintTextColor">#555555</item>
        <item name="android:textColorHint">#777777</item>
        <item name="boxBackgroundColor">#FFFFFF</item>
    </style>
    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item> <!-- Optional: consistent font size -->
        <item name="android:fontFamily">sans-serif</item> <!-- Optional: clean font -->
    </style>
</resources>
